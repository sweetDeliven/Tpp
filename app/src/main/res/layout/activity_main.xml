<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchSelectActivity">
    <include layout="@layout/title_layout"/>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:layout_width="match_parent">
    <LinearLayout
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cinima_title"
            android:text="ACTION梦空间影城"
            android:textSize="18sp"
            android:textColor="@color/cardview_dark_background"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/location"
            android:text="南岸区江南大道"
            android:gravity="left|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
<View
    android:layout_width="1dp"
    android:background="#D3D3D3"
    android:layout_height="match_parent"/>

        <ImageView
            android:background="@color/white"
            android:id="@+id/find_location"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_location" />
    </LinearLayout>
<RelativeLayout
    android:id="@+id/show_movie_detail"
    android:background="@drawable/gradient"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">

    //电影海报
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/movie_poster"
        android:scaleType="fitXY"
        android:layout_width="120dp"
        android:layout_height="135dp" />
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <TextView
        android:id="@+id/pass_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="bottom|center_horizontal"
        android:text="电影名"
        android:textColor="#000000"
        android:textSize="18sp"
        />

    //电影的属性
    <TextView
        android:id="@+id/moview_shuxing"
        android:layout_below="@id/pass_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="100分钟|喜剧|甄子丹 陈乔恩 杨颖"
        />
</RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:tabGravity="fill"
            app:tabIndicatorColor="#CD5C5C"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#CD5C5C"
            app:tabTextColor="#808080"
            app:tabMaxWidth="0dp"
            />

    </LinearLayout>

    <FrameLayout
        android:padding="5dp"
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </FrameLayout>


</LinearLayout>